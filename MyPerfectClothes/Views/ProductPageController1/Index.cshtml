
@{
    ViewData["Title"] = "ProductPage";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/css/site.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Paprika&display=swap" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Main Page</title>
</head>

<body>


@for (int i = 0; i < 8; i++)
    {
        <br />
    }


    <div class="product-container">


        <h1 class="product-heder">Shoes</h1>
        <p class="Price">Price:50$</p>
        <img src="~/pictures/shoe1.png" />

        <a asp-controller="CartPage" class="ToCart-but" style="text-decoration:none">
            Go to Order
        </a>





        <select  class="select1" aria-placeholder="">
            <option>
                Size
            </option>

            @for (int i = 39; i <= 44; i++)
            {
                <option>
                    @i
                </option>
                
            }

        </select>

        <select class="select2" aria-placeholder="">
            <option>
                Color
            </option>
            <option>
                white
            </option>
            <option>
                black
            </option>
            <option>
                red
            </option>


        </select>





    </div>

  @for (int i = 0; i < 4; i++)
    {
        <br />
    }
    <hr>

    <footer class="footer">
        <div class="fot-text">
            <h2><span class="material-symbols-outlined ">Public</span>World delivery</h2>

            <h2><span class="material-symbols-outlined ">Eco</span>Eco friendly</h2>

            <h2><span class="material-symbols-outlined ">Lock</span>High-level security</h2>
        </div>


    </footer>


</body>

</html>
